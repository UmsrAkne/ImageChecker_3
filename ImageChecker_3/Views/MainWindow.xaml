<Window
    x:Class="ImageChecker_3.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:ImageChecker_3.Views.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:images="clr-namespace:ImageChecker_3.Models.Images"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewModels="clr-namespace:ImageChecker_3.ViewModels"
    Title="{Binding TitleBarText.Title}"
    Width="800"
    Height="400"
    d:DataContext="{d:DesignInstance viewModels:MainWindowViewModel}"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">

    <Window.Resources>
        <converters:PreviewScaleMultiConverter x:Key="PreviewScaleMultiConverter" />
    </Window.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <ItemsControl
            Grid.Row="0"
            Grid.Column="0"
            ItemsSource="{Binding PreviewContainer.ImageWrappers}">

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>

                    <Canvas
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        ClipToBounds="True">

                        <Canvas.Width>
                            <MultiBinding Converter="{StaticResource PreviewScaleMultiConverter}">
                                <Binding Path="PreviewContainer.ScreenRect.Width" />
                                <Binding Path="PreviewContainer.PreviewScale" />
                            </MultiBinding>
                        </Canvas.Width>
                        <Canvas.Height>
                            <MultiBinding Converter="{StaticResource PreviewScaleMultiConverter}">
                                <Binding Path="PreviewContainer.ScreenRect.Height" />
                                <Binding Path="PreviewContainer.PreviewScale" />
                            </MultiBinding>
                        </Canvas.Height>
                    </Canvas>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemContainerStyle>
                <Style TargetType="ContentPresenter">
                    <Setter Property="Canvas.Left" Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=ItemsControl}, Path=DataContext.PreviewContainer.ScreenRect.X}" />
                    <Setter Property="Canvas.Top" Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=ItemsControl}, Path=DataContext.PreviewContainer.ScreenRect.Y}" />
                </Style>
            </ItemsControl.ItemContainerStyle>

            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type images:ImageWrapper}">
                    <Image Source="{Binding ImageFileInfo.FileInfo.FullName}">
                        <Image.Height>
                            <MultiBinding Converter="{StaticResource PreviewScaleMultiConverter}">
                                <Binding Path="ImageFileInfo.Height" />
                                <Binding Path="DataContext.PreviewContainer.PreviewScale" RelativeSource="{RelativeSource AncestorType=ItemsControl}" />
                            </MultiBinding>
                        </Image.Height>

                        <Image.Width>
                            <MultiBinding Converter="{StaticResource PreviewScaleMultiConverter}">
                                <Binding Path="ImageFileInfo.Width" />
                                <Binding Path="DataContext.PreviewContainer.PreviewScale" RelativeSource="{RelativeSource AncestorType=ItemsControl}" />
                            </MultiBinding>
                        </Image.Width>
                    </Image>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!--  X 方向スライダー  -->
        <Slider
            Grid.Row="1"
            Grid.Column="0"
            Maximum="{Binding PreviewContainer.ScreenRect.Width}"
            TickFrequency="10"
            Value="{Binding PreviewContainer.X}" />

        <!--  Y 方向スライダー  -->
        <Slider
            Grid.Row="0"
            Grid.Column="1"
            IsDirectionReversed="True"
            Maximum="{Binding PreviewContainer.ScreenRect.Height}"
            Orientation="Vertical"
            TickFrequency="10"
            Value="{Binding PreviewContainer.Y}" />

    </Grid>
</Window>